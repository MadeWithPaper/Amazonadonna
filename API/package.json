        "build:test": "./node_modules/.bin/tsc -p ./tsconfig.test.json",
        "build": "./node_modules/.bin/npm-run-all lint clean build:backend",
        "test": "./node_modules/.bin/npm-run-all lint:test clean build:test start:test",
        "lint": "./node_modules/.bin/tslint --project ./tsconfig.backend.json",
        "lint:test": "./node_modules/.bin/tslint --project ./tsconfig.test.json",
        "clean": "./node_modules/.bin/rimraf ./dist"

{
    "name": "amazonadonna_app",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "cross-env-shell NODE_ENV=test npm-run-all build start:all",
        "start:prod": "npm-run-all build start:serverProd",
        "start:all": "npm-run-all --parallel start:server start:watch",
        "start:server": "nodemon --inspect ./dist/server.js",
        "start:serverProd": "node ./dist/server.js",
        "start:watch": "tsc -p ./tsconfig.backend.json --watch",
        "start:test": "cross-env NODE_ENV=test mocha \"dist/test/*.js\" --timeout 4000 --exit",
        "start:localdb": "docker run -d -p 8000:8000 --name ddblocal amazon/dynamodb-local",
        "build:backend": "tsc -p ./tsconfig.backend.json",
        "build:test": "tsc -p ./tsconfig.test.json",
        "build": "npm-run-all lint clean build:backend",
        "test": "npm-run-all lint:test clean build:test start:test",
        "lint": "tslint --project ./tsconfig.backend.json",
        "lint:test": "tslint --project ./tsconfig.test.json",
        "clean": "rimraf ./dist",
        "clean:localdb:rm": "docker rm ddblocal",
        "clean:localdb:stop": "docker stop ddblocal",
        "clean:localdb": "npm-run-all clean:localdb:stop clean:localdb:rm"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "aws-sdk": "^2.356.0",
        "body-parser": "^1.18.3",
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "install": "^0.12.2",
        "mime": "^2.4.0",
        "multer": "^1.4.1",
        "multer-s3": "^2.9.0",
        "typescript": "^3.2.4",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/chai": "^4.1.7",
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/html-webpack-plugin": "^3.2.0",
        "@types/mime": "^2.0.0",
        "@types/mocha": "^5.2.5",
        "@types/multer": "^1.3.7",
        "@types/multer-s3": "^2.7.6",
        "@types/node": "^10.12.18",
        "@types/superagent": "^3.8.6",
        "@types/uuid": "^3.4.4",
        "chai": "^4.2.0",
        "chai-http": "^4.2.1",
        "cross-env": "^5.2.0",
        "mocha": "^5.2.0",
        "nodemon": "^1.18.7",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.2",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.15.0"
    }
}

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/orderScreen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/orderScreen_editOrder"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/edit"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/orderScreen_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderScreen_toolbar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="@string/order_id"
        android:textColor="#FFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orderScreen_toolbar" />

    <ImageView
        android:id="@+id/orderScreen_artisanProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="@id/orderScreen_toolbar"
        app:layout_constraintTop_toBottomOf="@+id/orderScreen_toolbar"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/orderScreen_artisan_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:text="@string/placeholder_text"
        android:textColor="#000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/orderScreen_artisanProfilePic"
        app:layout_constraintTop_toTopOf="@+id/orderScreen_artisanProfilePic" />

    <TextView
        android:id="@+id/orderScreen_items_listed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="35dp"
        android:text="@string/items_listed"
        android:textColor="#888"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/orderScreen_artisanProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/orderScreen_artisan_name" />

    <TextView
        android:id="@+id/orderScreen_outstanding_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="35dp"
        android:text="@string/outstanding_orders"
        android:textColor="#888"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/orderScreen_items_listed"
        app:layout_constraintTop_toBottomOf="@+id/orderScreen_artisan_name" />

    <TextView
        android:id="@+id/orderScreen_OrderDate"
        android:layout_height="25dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/orderScreen_artisanProfilePic"
        app:layout_constraintStart_toStartOf="@+id/orderScreen_artisanProfilePic"
        android:textSize="15sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/orderScreen_ArtisanConfirmed"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/orderScreen_OrderDate"
        app:layout_constraintStart_toStartOf="@+id/orderScreen_artisanProfilePic"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/artisan_confirmed"/>

    <TextView
        android:id="@+id/orderScreen_Shipped"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/orderScreen_ArtisanConfirmed"
        app:layout_constraintStart_toStartOf="@+id/orderScreen_artisanProfilePic"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/order_shipped"/>

    <TextView
        android:id="@+id/orderScreen_Payout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/orderScreen_Shipped"
        app:layout_constraintStart_toStartOf="@+id/orderScreen_artisanProfilePic"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/artisan_payout"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/orderScreen_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderScreen_Payout"/>

</android.support.constraint.ConstraintLayout>
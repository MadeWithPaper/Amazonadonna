<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/orderScreenCell_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/orderScreenCell_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="@string/placeholder_text"
        android:textColor="#000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/orderScreenCell_item_image"
        app:layout_constraintTop_toTopOf="@+id/orderScreenCell_item_image" />

    <TextView
        android:id="@+id/orderScreenCell_item_quant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:text="@string/order_cost"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/orderScreenCell_item_image"
        app:layout_constraintTop_toBottomOf="@+id/orderScreenCell_item_name" />

</android.support.constraint.ConstraintLayout>